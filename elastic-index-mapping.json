                "normalizer": "term_normalizer",
                "copy_to": "SearchableContent"
            },
            "Tipo": {
                "type": "keyword",
                "normalizer": "term_normalizer"
            },
            "Jurisprudência": {
                "type": "keyword",
                "normalizer": "term_normalizer"
            },
            "Original URL": {
                "type": "keyword"
            },
            "Origem": {
                "type": "keyword"
            }
        }
