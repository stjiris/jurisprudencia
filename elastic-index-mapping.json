            },
            "Código Tribunal": {
                "type": "keyword"
            },
            "Processo": {
                "type": "keyword",
                "normalizer": "term_normalizer",
                "copy_to": "SearchableContent"
            },
            "Relator": {
                "type": "keyword",
                "normalizer": "term_normalizer",
                "copy_to": "SearchableContent"
            },
            "Descritores": {
                "type": "text",
                "fielddata": true,
                "fields": {
                    "keyword": {
                        "type": "keyword",
                        "normalizer": "term_normalizer"
