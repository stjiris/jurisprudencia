extends head

block head
    // Fix style and icon links
    link(rel="stylesheet",href="../style.css")
    link(rel="icon",href="../stj-logo.png")

block header
    header.mb-2
        form.container.row.align-items-center.m-auto.p-4
            a(href="../").col-12.col-lg-6.align-items-center.d-flex.flex-wrap.py-2
                img(src="../stj-logo.png", style="max-height: 70px;")
                h2.ps-2 JurisprudÃªncia
            .col-12.col-lg-6.d-print-none
                block headerinput
                    h4(style="color: var(--color-white);") Tabelas
            .col-12.col-lg-6.d-none.d-print-block
                block printpageinfo
                    p Tabelas

block allmain
    if warning
        .alert.alert-warning(role="alert")
            h5.alert-heading
                strong 
                    i.bi.bi-exclamation-circle
                    | !{warning}
    a(href="./") Voltar
    p A mostrar !{values.length} linhas.
    table.table.table-sm
        thead
            tr
                for key of header
                    th !{key}
        tbody
            for anovalues of values
                tr
                    for value of anovalues
                        if value == 0
                            td: span.text-muted !{value}
                        else
                            td: span.fw-bold !{value}
                